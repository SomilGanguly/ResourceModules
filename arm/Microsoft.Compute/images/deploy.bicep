}

resource image 'Microsoft.Compute/images@2021-04-01' = {
  name: imageName
  location: location
  tags: tags
  properties: {
    storageProfile: {
      osDisk: {
        osType: osType
        blobUri: osDiskBlobUri
        caching: osDiskCaching
        storageAccountType: osAccountType
      }
      dataDisks: []
      zoneResilient: zoneResilient
